<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>selector</managed-bean-name>
        <managed-bean-class>Selector</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
     <managed-bean>
        <managed-bean-name>util</managed-bean-name>
        <managed-bean-class>Util</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>customer</managed-bean-name>
        <managed-bean-class>Customer</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>    
    <managed-bean>
        <managed-bean-name>login</managed-bean-name>
        <managed-bean-class>Login</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>  
    <managed-bean>
        <managed-bean-name>register</managed-bean-name>
        <managed-bean-class>Register</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>employee</managed-bean-name>
        <managed-bean-class>Employee</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>reservation</managed-bean-name>
        <managed-bean-class>Reservation</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>room</managed-bean-name>
        <managed-bean-class>Room</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>validation</managed-bean-name>
        <managed-bean-class>Validation</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
      
    <navigation-rule>
        <from-view-id>
            /index.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/start.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    <navigation-rule>
        <from-view-id>
            /start.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>listCustomers</from-outcome>
            <to-view-id>/showAllCustomers.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>changeSettings</from-outcome>
            <to-view-id>/employeeSettings.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>createEmployee</from-outcome>
            <to-view-id>/createNewEmployee.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>rebuildRooms</from-outcome>
            <to-view-id>buildFloorDB.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>makeReservation</from-outcome>
            <to-view-id>makeReservation.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>deleteEmployee</from-outcome>
            <to-view-id>/deleteEmployee.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>checkReservation</from-outcome>
            <to-view-id>/checkReservation.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>checkReservations</from-outcome>
            <to-view-id>/checkReservations.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>setRoomPrice</from-outcome>
            <to-view-id>/setRoomPrice.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>checkIn</from-outcome>
            <to-view-id>/checkIn.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>checkOut</from-outcome>
            <to-view-id>/checkOut.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>SelectDate</from-outcome>
            <to-view-id>/SelectDate.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /register.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    <navigation-rule>
        <from-view-id>
            /createNewEmployee.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/start.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /employeeSettings.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/start.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>main</from-outcome>
            <to-view-id>/start.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /buildFloorDB.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/start.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /makeReservation.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/pickRoom.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /pickRoom.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/start.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>no rooms</from-outcome>
            <to-view-id>makeReservation.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /checkReservation.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>start.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /deleteEmployee.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>move on</from-outcome>
            <to-view-id>/confirmEmployeeDelete.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /confirmEmployeeDelete.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/start.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
        <navigation-rule>
        <from-view-id>
            /SelectDate.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome></from-outcome>
            <to-view-id>/roomPrices.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
            <navigation-rule>
        <from-view-id>
            /checkIn.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome></from-outcome>
            <to-view-id>/checkIn2.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
